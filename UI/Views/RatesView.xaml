<UserControl x:Class="CryptoPulse.UI.Views.RatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:CryptoPulse.UI.ViewModels">
    <Grid Background="Black">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Загрузить курсы" Command="{Binding LoadRatesCommand}" Width="150" Height="40"/>
            <TextBlock Text="{Binding CoinRates}" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>