<Window x:Class="CryptoPulse.UI.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Регистрация нового пользователя" Foreground="White" FontSize="18" Margin="0,0,0,10"/>
            <StackPanel>
                <TextBlock Text="Логин" Foreground="Gray" Margin="0,0,0,2" x:Name="LoginHint" />
                <TextBox x:Name="LoginTextBox" Margin="0,0,0,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Email" Foreground="Gray" Margin="0,0,0,2" x:Name="EmailHint" />
                <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Пароль" Foreground="Gray" Margin="0,0,0,2" x:Name="PasswordHint" />
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            </StackPanel>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Width="150" Height="30" Background="#FFD700" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>