<Window x:Class="CryptoPulse.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CryptoPulse" Height="600" Width="800">
    <Grid>
        <!-- Фон с градиентом -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A2E" Offset="0"/>
                <GradientStop Color="#16213E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- Логотип с анимацией -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="LogoText" Text="CryptoPulse" 
                       FontSize="48" Foreground="#FFD700" 
                       FontWeight="Bold">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:2"
                                                 AutoReverse="False"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
            <!-- Окно приветствия -->
            <Border Background="#2F2F4F" CornerRadius="10" Padding="20" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Добро пожаловать!" Foreground="White" FontSize="20" Margin="0,0,0,10"/>
                    <TextBlock Text="Пожалуйста, войдите или зарегистрируйтесь" Foreground="White" FontSize="14" Margin="0,0,0,20"/>
                    <Button Content="Регистрация" Width="150" Height="40" Background="#FFD700" Foreground="Black" Click="RegisterButton_Click"/>
                    <Button Content="Вход" Width="150" Height="40" Background="#FFD700" Foreground="Black" Click="LoginButton_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>